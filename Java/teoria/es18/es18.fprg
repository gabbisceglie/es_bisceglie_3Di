    <function name="legginumeri" type="Integer" variable="numeri">
        <parameters/>
        <body>
            <declare name="numeri, i" type="Integer" array="False" size=""/>
            <output expression="&quot;Quanti numeri vuoi inserire?: &quot;" newline="True"/>
            <input variable="n"/>
            <declare name="numeri" type="Integer" array="True" size="n"/>
            <for variable="i" start="0" end="i&lt;n" direction="inc" step="1">
                <output expression="&quot;Inserisci il numero &quot; &amp; (i + 1) &amp; &quot;: &quot;" newline="True"/>
                <input variable="numeri[i]"/>
            </for>
        </body>
    </function>
    <function name="stampaRisultato" type="None" variable="">
        <parameters>
            <parameter name="massimo" type="Integer" array="False"/>
            <parameter name="posizione" type="Integer" array="False"/>
        </parameters>
        <body>
            <output expression="&quot;Il valore massimo &#232;: &quot; &amp; massimo" newline="True"/>
            <output expression="&quot;La sua posizione &#232;: &quot; &amp; posizione" newline="True"/>
        </body>
    </function>
    <function name="trovaMassimo" type="Integer" variable="massimo, posizione">
        <parameters>
            <parameter name="numeri" type="Integer" array="True"/>
        </parameters>
        <body>
            <declare name="massimo, posizione" type="Integer" array="False" size=""/>
            <comment text="Integer.min_value"/>
            <assign variable="massimo" expression="-2147483648"/>
            <assign variable="posizione" expression="0"/>
            <for variable="i" start="0" end="i&lt;" direction="inc" step="1">
                <if expression="numeri[i] &gt; massimo">
                    <then>
                        <assign variable="massimo" expression="numeri[i]"/>
                        <assign variable="posizione" expression="i+1"/>
                    </then>
                    <else/>
                </if>
            </for>
        </body>
    </function>
