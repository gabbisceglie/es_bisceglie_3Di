    <function name="Main" type="None" variable="">
        <parameters/>
        <body>
            <declare name="numeri" type="Integer" array="True" size="legginumeri"/>
            <declare name="risultato" type="Integer" array="True" size="trovaMassimo"/>
            <declare name="stampaRisultato" type="Integer" array="False" size=""/>
            <call expression="stampaRisultato(massimo, posizione)"/>
        </body>
